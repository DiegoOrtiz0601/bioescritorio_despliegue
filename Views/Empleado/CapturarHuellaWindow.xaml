<Window x:Class="BiomentricoHolding.Views.Empleado.CapturarHuellaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Captura de Huella"
        Height="650" Width="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8F9FA"
        WindowStyle="None">

    <Border Background="White"
            CornerRadius="16"
            Margin="25"
            Padding="25"
            Effect="{DynamicResource DropShadow}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título con header -->
            <Border Background="#1E3A8A"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,0,30">
                <DockPanel>
                    <TextBlock Text="🖐 Captura de Huella Digital"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </DockPanel>
            </Border>

            <!-- Panel de huellas -->
            <Border Grid.Row="1"
                    Background="#F9FAFB"
                    BorderBrush="#E5E7EB"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="25"
                    Margin="0,0,0,25">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <WrapPanel x:Name="panelHuellas"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               Orientation="Horizontal"
                               ItemWidth="120"
                               ItemHeight="120"
                               Margin="10">
                        <!-- Las imágenes se agregan aquí dinámicamente -->
                    </WrapPanel>
                </ScrollViewer>
            </Border>

            <!-- Estado y botones -->
            <StackPanel Grid.Row="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom">
                <Border Background="#FEF3C7"
                        BorderBrush="#F59E0B"
                        BorderThickness="2"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,0,0,25">
                    <TextBlock x:Name="txtEstado"
                               Text="Coloca tu dedo..."
                               FontWeight="SemiBold"
                               FontSize="17"
                               Foreground="#92400E"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>
                </Border>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <Button x:Name="btnConfirmar"
                            Content="✅ Confirmar"
                            Width="160"
                            Height="45"
                            Background="#059669"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="15"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,15,0"
                            Visibility="Collapsed"
                            IsEnabled="False"
                            Click="BtnConfirmar_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="10"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="❌ Cerrar"
                            Width="160"
                            Height="45"
                            Background="#DC2626"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="15"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnCerrar_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="10"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
