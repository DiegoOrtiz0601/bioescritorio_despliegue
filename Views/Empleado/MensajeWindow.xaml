<Window x:Class="BiomentricoHolding.Views.MensajeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mensaje"
        Height="280" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border Background="White" 
            CornerRadius="10" 
            BorderBrush="#E5E7EB" 
            BorderThickness="1"
            Effect="{StaticResource VMLDropShadow}">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <Border Grid.Row="0" 
                    Background="#1E40AF" 
                    CornerRadius="10,10,0,0">
                <Grid>
                    <TextBlock Text="💬 Mensaje" 
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                    <Button Content="✕" 
                            Width="30" Height="30" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderThickness="0" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            Margin="0,0,10,0" 
                            Cursor="Hand" 
                            Click="BtnCerrar_Click"/>
                </Grid>
            </Border>

            <!-- Contenido -->
            <Border Grid.Row="1" 
                    Background="White" 
                    Padding="20">
                <StackPanel VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,0,0,15">
                        <TextBlock x:Name="icono" 
                                   Text="🔔" 
                                   FontSize="32" 
                                   VerticalAlignment="Top" 
                                   Margin="0,0,15,0" 
                                   x:FieldModifier="public"/>
                        <TextBlock x:Name="txtMensaje" 
                                   Text="Mensaje de ejemplo" 
                                   FontSize="14" 
                                   Foreground="#374151" 
                                   TextWrapping="Wrap" 
                                   VerticalAlignment="Center" 
                                   FontWeight="SemiBold" 
                                   MaxWidth="250" 
                                   x:FieldModifier="public"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Botones -->
            <Border Grid.Row="2" 
                    Background="#F9FAFB" 
                    CornerRadius="0,0,10,10" 
                    Padding="20,10">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                    <Button x:Name="btnCancelar" 
                            Content="❌ Cancelar" 
                            Width="90" Height="32" 
                            Background="#6B7280" 
                            Foreground="White" 
                            BorderThickness="0" 
                            FontSize="12" 
                            FontWeight="Bold" 
                            Margin="0,0,10,0" 
                            Cursor="Hand" 
                            Click="BtnCancelar_Click"/>
                    <Button x:Name="btnOK" 
                            Content="✅ Aceptar" 
                            Width="90" Height="32" 
                            Background="#1E40AF" 
                            Foreground="White" 
                            BorderThickness="0" 
                            FontSize="12" 
                            FontWeight="Bold" 
                            Cursor="Hand" 
                            Click="BtnOK_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
