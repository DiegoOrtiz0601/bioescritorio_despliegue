<Window x:Class="BiomentricoHolding.Views.Empleado.EmpleadoYaExisteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Empleado ya existe"
        Height="320" Width="480"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Topmost="True">

    <Border Background="White"
            CornerRadius="12"
            BorderBrush="#E5E7EB"
            BorderThickness="1"
            Effect="{StaticResource VMLDropShadow}">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#DC2626" 
                    CornerRadius="12,12,0,0">
                <Grid>
                    <TextBlock Text="⚠️ Empleado ya registrado" 
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                    <Button Content="✕" 
                            Width="30" Height="30" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderThickness="0" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            Margin="0,0,15,0" 
                            Cursor="Hand" 
                            Click="BtnCerrar_Click"/>
                </Grid>
            </Border>

            <!-- Contenido -->
            <Border Grid.Row="1" 
                    Background="White" 
                    Padding="25">
                <StackPanel VerticalAlignment="Center">
                    <Border Background="#FEF2F2"
                            BorderBrush="#FECACA"
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="20"
                            Margin="0,0,0,20">
                        <TextBlock x:Name="txtMensaje"
                                   Text="El empleado con cédula 80550594 ya está registrado. ¿Qué deseas hacer?"
                                   FontSize="15"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Foreground="#991B1B"
                                   FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Botones -->
            <Border Grid.Row="2" 
                    Background="#F9FAFB" 
                    CornerRadius="0,0,12,12" 
                    Padding="25,15">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                    <Button x:Name="btnModificar" 
                            Content="✏️ Modificar" 
                            Width="120" Height="38" 
                            Background="#DC2626" 
                            Foreground="White" 
                            BorderThickness="0" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            Margin="0,0,15,0" 
                            Cursor="Hand" 
                            Click="BtnModificar_Click"/>
                    <Button x:Name="btnCerrar" 
                            Content="❌ Cerrar" 
                            Width="100" Height="38" 
                            Background="#6B7280" 
                            Foreground="White" 
                            BorderThickness="0" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            Cursor="Hand" 
                            Click="BtnCerrar_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
