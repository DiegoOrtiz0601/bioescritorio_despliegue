<Window x:Class="BiomentricoHolding.Views.Configuracion.ConfiguracionHorarioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConfiguraciÃ³n de Horario por Defecto"
        Height="700" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Estilo de botÃ³n moderno -->
        <Style x:Key="BotonModerno" TargetType="Button">
            <Setter Property="Background" Value="#DC2626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B91C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo de botÃ³n cancelar -->
        <Style x:Key="BotonCancelar" TargetType="Button" BasedOn="{StaticResource BotonModerno}">
            <Setter Property="Background" Value="#6B7280"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4B5563"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo de botÃ³n gris -->
        <Style x:Key="BotonGris" TargetType="Button" BasedOn="{StaticResource BotonModerno}">
            <Setter Property="Background" Value="#6B7280"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4B5563"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo de ComboBox -->
        <Style x:Key="ComboBoxModerno" TargetType="ComboBox">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Sombra -->
        <DropShadowEffect x:Key="DropShadow"
                  Color="Black"
                  Direction="270"
                  ShadowDepth="4"
                  BlurRadius="12"
                  Opacity="0.4"/>
    </Window.Resources>

    <!-- Contenedor principal con sombra -->
    <Border Background="White" CornerRadius="16" Margin="20" Effect="{DynamicResource DropShadow}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Encabezado -->
            <Border Background="#DC2626" CornerRadius="16,16,0,0" Height="60">
                <Grid>
                    <TextBlock Text="ðŸ•’ ConfiguraciÃ³n de Horario por Defecto"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    
                    <!-- BotÃ³n cerrar -->
                    <Button Content="âœ•"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Width="30"
                            Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,15,0"
                            Click="BtnCerrar_Click"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#B91C1C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Contenido -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
                <StackPanel>
                    <!-- Mensaje informativo -->
                    <Border Background="#FEF2F2" BorderBrush="#DC2626" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="ðŸ“‹ ConfiguraciÃ³n de Horarios por Defecto"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Foreground="#991B1B"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Configure los horarios por defecto que se asignarÃ¡n automÃ¡ticamente a los empleados cuando se cree un horario genÃ©rico."
                                       FontSize="14"
                                       Foreground="#374151"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Panel de dÃ­as -->
                    <StackPanel x:Name="panelDias" Margin="0,0,0,10"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Botones -->
            <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="0,0,16,16" Padding="20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Style="{StaticResource BotonGris}" Click="BtnRestaurar_Click" Width="140">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”„" Margin="0,0,8,0"/>
                            <TextBlock Text="Restaurar"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource BotonModerno}" Click="BtnGuardar_Click" Width="140">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’¾" Margin="0,0,8,0"/>
                            <TextBlock Text="Guardar"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource BotonCancelar}" Click="BtnCerrar_Click" Width="100">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âŒ" Margin="0,0,8,0"/>
                            <TextBlock Text="Cerrar"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window> 